<p id="notice"><%= notice %></p>

<h1>Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Height</th>
      <th>Hash</th>
      <th>Version</th>
      <th>Prevhash</th>
      <th>Merkleroot</th>
      <th>Time</th>
      <th>Bits</th>
      <th>Nonce</th>
      <th>Orphan</th>
      <th>Status</th>
      <th>Filen</th>
      <th>Filepos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.height %></td>
        <td><%= block.hash %></td>
        <td><%= block.version %></td>
        <td><%= block.prevhash %></td>
        <td><%= block.merkleroot %></td>
        <td><%= block.time %></td>
        <td><%= block.bits %></td>
        <td><%= block.nonce %></td>
        <td><%= block.orphan %></td>
        <td><%= block.status %></td>
        <td><%= block.filen %></td>
        <td><%= block.filepos %></td>
        <td><%= link_to 'Show', block %></td>
        <td><%= link_to 'Edit', edit_block_path(block) %></td>
        <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

